<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('../partials/head'); %>
   <style>
    section {
        margin-top: 60px;
    }

    @media (max-width: 430px) {
        section {
            margin-top: 20px;
        }
    }
   </style>
</head>
<body class="container">
    <header>
        <%- include('../partials/headerProf'); %>
    </header>

    <section id="user-info" class="container">
        <h2>Informações do Professor</h2>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="nome" class="form-label">Nome:</label>
                    <input class="form-control" type="text" id="nome" value="Nome do Usuário" readonly disabled>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="cpf" class="form-label">CPF:</label>
                    <input class="form-control" type="text" id="cpf" value="000.000.000-00" readonly disabled>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-6">
                <div class="mb-3">
                    <label for="email" class="form-label">Email:</label>
                    <input class="form-control" type="text" id="email" value="email@exemplo.com">
                </div>
            </div>
            <div class="col-6">
                <div class="mb-3">
                    <label for="telefone" class="form-label">Telefone:</label>
                    <input class="form-control" type="text" id="telefone" value="(XX) XXXX-XXXX">
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-6">
                <div class="mb-3">
                    <label for="senha" class="form-label">Senha:</label>
                    <input class="form-control" type="text" id="senha" value="Senha">
                </div>
            </div>
            <div class="col-6">
                <div class="mb-3">
                    <label for="ID" class="form-label">Identificador:</label>
                    <input class="form-control" type="text" id="id" value="Número do id" readonly disabled>
                </div>
            </div>
        </div>

        <button type="button" class="btn" style="background-color: rgb(115, 115, 141); border-color: rgb(115, 115, 141); color: white; width: 100%;">Salvar alterações</button>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
