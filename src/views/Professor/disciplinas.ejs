          </div>
    
          <div class="container col-5 hidden" id="studentsContainer">
            <h3>Lista de Alunos</h3>
            <ul id="studentsList" class="list-group">
              <!-- A lista de alunos será inserida aqui pelo JavaScript -->
            </ul>
          </div>
        </div>
      </section>
      
      <script>
        const students = Array.from({ length: 30 }, (_, i) => `Aluno ${i + 1}`);
    
        function showStudents(event) {
          event.preventDefault();
          const container = document.getElementById('studentsContainer');
          const list = document.getElementById('studentsList');
          
          list.innerHTML = students.map(student => `<li class="list-group-item">${student}</li>`).join('');
          
          container.classList.toggle('hidden');
        }
      </script>
    
