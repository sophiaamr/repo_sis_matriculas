<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head'); %>

  <style>

body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f0f0f0;
        }
        .container {
            text-align: center;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
    .login-box {
      width: 300px;
      padding: 20px;
      background-color: white;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }

    .login-box h2 {
      text-align: center;
      margin-bottom: 20px;
    }

    .login-box .form-control {
      margin-bottom: 15px;
    }

    .login-box button {
      width: 100%;
    }
  </style>
</head>
<body>
  
<section class="login-box">
  <h2 style="color: #73738d;">Login</h2>
  <% if (typeof message !== 'undefined') { %>
    <p style="color: red;"><%= message %></p>
<% } %>
  <form id="loginForm" method="POST" action="/api/login/auth">
    <div class="mb-3">
      <input type="text" class="form-control" name="email" placeholder="Email" required>
    </div>
    <div class="mb-3">
      <input type="password" class="form-control" name="senha" placeholder="Senha" required>
    </div>
    
    <button type="submit" class="btn btn-primary" style="background-color: rgb(115, 115, 141); border-color: rgb(115, 115, 141);">Entrar</button>
  </form>
</section>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
