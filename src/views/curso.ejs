<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('partials/head'); %>

   <style>
    .nav-link {
      color: white;
    }

    .hidden {
      display: none;
    }
   </style>
</head>

<body class="container">
  <header>
      <%- include('partials/headerSecretaria'); %>
  </header>
  <section>
    <div class="row">
        <div class="col-7">
            <div class="row mb-3">
                <% cursos.forEach(curso => { %>
                    <div class="col-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title"><%= curso.nome %></h5>
                                <p class="card-text"><%= curso.numCredito %> créditos</p>
                                <!-- Modificação do botão -->
                                <button onclick="redirectToCurriculo(<%= curso.idCurso %>)" class="btn btn-primary">Ver Grade Curricular</button>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</section>

<script>
  function redirectToCurriculo(cursoId) {
    
      window.location.href = `/api/cursos/${cursoId}/curriculo`;
  }
</script>

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>
</html>
