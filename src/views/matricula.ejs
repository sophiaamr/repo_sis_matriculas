<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head'); %>
    <title>Formulário de Matrícula</title>
    <style>
        .navbar-nav .nav-link {
            color: white;
            font-size: 1rem;
        }

        .navbar-nav .nav-link:hover {
            color: #e9ecef;
        }

        .form-group {
            margin-bottom: 5px;
        }

        .form-group label {
            font-weight: bold;
        }

        .form-group select,
        .form-group input[type="checkbox"] {
            margin-right: 10px;
        }

        .disciplinas-container {
            display: flex;
            flex-direction: column;
        }

        .disciplinas-container p {
            margin: 0;
            margin-bottom: 5px;
            display: flex;
            align-items: center;
        }

        .disciplinas-container input[type="checkbox"] {
            margin-right: 10px;
        }

        .error {
            color: red;
            font-size: 0.9em;
        }

        .btn-custom {
            background-color: rgb(115, 115, 141);
            border-color: rgb(115, 115, 141);
            color: #ffffff;
            width: 100%;
        }

        .btn-custom:hover {
            background-color: rgb(115, 115, 141);
            border-color: rgb(115, 115, 141);
        }

        .disabled {
            color: grey;
            font-style: italic;
        }
    </style>
</head>
<body class="container">
    <header>
        <%- include('partials/headerAluno'); %>
    </header>

    <main>
        <h3>Formulário de Matrícula</h3>
        <div id="notification" class="message"></div>
        <form id="matriculaForm" action="/api/matricula" method="POST">
            <!-- Seleção do Curso -->
            <div class="form-group">
                <label for="idCurso">Selecione o Curso:</label>
                <select id="idCurso" name="idCurso" class="form-select" required>
                    <option value="">Selecione um curso</option>
                    <% cursos.forEach(curso => { %>
                        <option value="<%= curso.idCurso %>"><%= curso.nome %></option>
                    <% }) %>
                </select>
            </div>

            <!-- Seleção do Período -->
            <div class="form-group">
                <label for="periodo">Selecione o Período:</label>
                <select id="periodo" name="periodo" class="form-select" required>
                    <option value="">Selecione o período</option>
                </select>
            </div>

            <!-- Disciplinas Obrigatórias -->
            <div class="form-group">
                <label>Selecione as Disciplinas Obrigatórias:</label>
                <div class="disciplinas-container" id="disciplinasObrigatorias">
                    <!-- Content generated by JS -->
                </div>
                <div id="obrigatoriaError" class="error"></div>
            </div>

            <!-- Disciplinas Optativas -->
            <div class="form-group">
                <label>Selecione as Disciplinas Optativas:</label>
                <div class="disciplinas-container" id="disciplinasOptativas">
                    <!-- Content generated by JS -->
                </div>
                <div id="optativaError" class="error"></div>
            </div>

            <!-- Número de Matrícula -->
            <div class="form-group">
                <label for="numeroMatricula">Número de Matrícula:</label>
                <input type="text" id="numeroMatricula" name="numeroMatricula" class="form-control" required>
            </div>

            <button type="submit" class="btn btn-custom">Enviar</button>
        </form>
    </main>

    <div class="modal fade" id="matriculaAvisoModal" tabindex="-1" aria-labelledby="matriculaAvisoModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="matriculaAvisoModalLabel">Aviso</h5>
                </div>
                <div class="modal-body">
                    As matrículas estão fechadas no momento.
                </div>
                
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            fetch('/api/Outros/matricula-dates')
                .then(response => response.json())
                .then(data => {
                    const startDate = new Date(data.matricula_start);
                    const endDate = new Date(data.matricula_end);
                    const today = new Date();

                    if (today < startDate || today > endDate) {
                        // Show the modal and prevent form interaction
                        const modalElement = document.getElementById('matriculaAvisoModal');
                        const modal = new bootstrap.Modal(modalElement, {
                            backdrop: 'static',
                            keyboard: false
                        });
                        modal.show();

                        // Disable the form submit button
                        document.getElementById('matriculaForm').querySelector('button').disabled = true;
                    }
                })
                .catch(error => {
                    console.error('Erro ao buscar as datas de matrícula:', error);
                });
        });

        // Convert data to JSON format for client-side use
        const cursos = <%- JSON.stringify(cursos) %>;
        const disciplinas = <%- JSON.stringify(disciplinas) %>;

        // Function to update periods based on selected course
        document.getElementById('idCurso').addEventListener('change', function(event) {
            const cursoId = event.target.value;
            const curso = cursos.find(c => c.idCurso == cursoId);
            let selectPeriodo = document.getElementById('periodo');

            // Reset period options
            selectPeriodo.innerHTML = '<option value="">Selecione o período</option>';

            if (curso) {
                for (let index = 1; index <= curso.periodo; index++) {
                    selectPeriodo.innerHTML += `<option value="${index}">Período ${index}</option>`;
                }
            }

            // Clear disciplines sections when course changes
            document.getElementById('disciplinasObrigatorias').innerHTML = '';
            document.getElementById('disciplinasOptativas').innerHTML = '';
        });

        // Function to update disciplines based on selected period
        document.getElementById('periodo').addEventListener('change', function(event) {
            const periodo = event.target.value;
            const cursoId = document.getElementById('idCurso').value;

            if (!cursoId || !periodo) return;

            const filteredDisciplinas = disciplinas.filter(d => d.idCurso == cursoId && d.periodo == periodo);

            const obrigatoriasContainer = document.getElementById('disciplinasObrigatorias');
            const optativasContainer = document.getElementById('disciplinasOptativas');

            // Reset containers
            obrigatoriasContainer.innerHTML = '';
            optativasContainer.innerHTML = '';

            filteredDisciplinas.forEach(disciplina => {
                const checkbox = `<p class="${disciplina.status == 'ativa' ? '' : 'disabled'}">
                                    <input type="checkbox" name="disciplinas" value="${disciplina.idDisciplina}" 
                                    ${disciplina.status == 'ativa' ? '' : 'disabled'}>
                                    ${disciplina.nomeDisciplina}
                                    ${disciplina.status == 'ativa' ? '' : '<span>(Cheia ou indisponível)</span>'}
                                  </p>`;
                if (disciplina.numCredito === 2) {
                    obrigatoriasContainer.innerHTML += checkbox;
                } else {
                    optativasContainer.innerHTML += checkbox;
                }
            });

            // Attach event listeners for checkbox limits
            limitCheckboxSelection('disciplinasObrigatorias', 4);
            limitCheckboxSelection('disciplinasOptativas', 2);
        });

        // Function to limit the number of checkboxes that can be selected
        function limitCheckboxSelection(containerId, maxSelections) {
            const container = document.getElementById(containerId);
            const checkboxes = container.querySelectorAll('input[type="checkbox"]');

            checkboxes.forEach(checkbox => {
                checkbox.addEventListener('change', function() {
                    const checkedCount = container.querySelectorAll('input[type="checkbox"]:checked').length;

                    if (checkedCount > maxSelections) {
                        this.checked = false; // Prevent the checkbox from being checked
                        alert(`Você só pode selecionar até ${maxSelections} disciplinas neste grupo.`);
                    }
                });
            });
        }

        // Function to handle form submission
        document.getElementById('matriculaForm').addEventListener('submit', function(event) {
            event.preventDefault(); // Evita o envio padrão do formulário

            const numeroMatricula = document.getElementById('numeroMatricula').value;
            const idCurso = document.getElementById('idCurso').value;
            const periodo = document.getElementById('periodo').value;
            const selectedDisciplinas = Array.from(document.querySelectorAll('input[name="disciplinas"]:checked')).map(checkbox => checkbox.value);

            if (!numeroMatricula || !idCurso || !periodo || selectedDisciplinas.length === 0) {
                alert('Por favor, preencha todos os campos obrigatórios.');
                return;
            }

            // Fetch para obter dados do aluno
            fetch(`/api/aluno?matricula=${encodeURIComponent(numeroMatricula)}`)
                .then(response => {
                    console.log('Resposta recebida:', response);
                    return response.text().then(text => {
                        console.log('Conteúdo da resposta:', text);
                        try {
                            return JSON.parse(text); // Tenta parsear o JSON manualmente
                        } catch (error) {
                            throw new Error(`Erro ao parsear JSON: ${error.message}`);
                        }
                    });
                })
                .then(data => {
                    if (data.idAluno) {
                        // Continue com a lógica se idAluno estiver presente
                        const matriculaData = {
                            idAluno: data.idAluno,
                            idCurso: idCurso,
                            periodo: periodo,
                            status: 'ativa',
                            disciplinas: selectedDisciplinas
                        };

                        // Fetch para enviar os dados da matrícula
                        return fetch('/api/matricula', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify(matriculaData)
                        });
                    } else {
                        throw new Error('Número de matrícula inválido.');
                    }
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Erro ao realizar a matrícula: ' + response.statusText);
                    }
                    return response.json();
                })
                .then(result => {
                    if (result.success) {
                        alert('Matrícula realizada com sucesso!');
                        document.getElementById('matriculaForm').reset();
                    } else {
                        alert('Erro ao realizar a matrícula: ' + result.message);
                    }
                })
                .catch(error => {
                    console.error('Erro ao processar a matrícula:', error);
                    alert('Erro ao processar a matrícula: ' + error.message);
                });
        });

    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
