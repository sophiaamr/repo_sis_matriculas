<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('partials/head'); %>
</head>

<body class="container">
    <header>
        <%- include('partials/headerAluno'); %>
    </header>

    <section id="user-info" class="container">
        <h2>Informações do Aluno</h2>
    
        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <label for="nome" class="form-label">Nome:</label>
              <input class="form-control" type="text" id="nome" value="<%= usuario.nome %>" readonly disabled>
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <label for="cpf" class="form-label">CPF:</label>
              <input class="form-control" type="text" id="cpf" value="<%= usuario.cpf %>" readonly disabled>
            </div>
          </div>
        </div>
    
        <div class="row">
          <div class="col-6">
            <div class="mb-3">
              <label for="email" class="form-label">Email:</label>
              <input class="form-control" type="text" id="email" value="<%= usuario.email %>">
            </div>
          </div>
          <div class="col-6">
            <div class="mb-3">
              <label for="telefone" class="form-label">Telefone:</label>
              <input class="form-control" type="text" id="telefone" value="<%= usuario.telefone %>">
            </div>
          </div>
        </div>
    
        <div class="row">
          <div class="col-6">
            <div class="row">
                <div class="mb-3">
                    <label for="senha" class="form-label">Senha:</label>
                    <input class="form-control" type="text" id="senha" value="<%= usuario.senha %>" >
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="mb-3">
                        <label for="matricula" class="form-label">Matrícula:</label>
                        <input class="form-control" type="text" id="matricula" value="<%= infoadicional.matricula %>" readonly disabled>
                    </div>
                </div>
                <div class="col-6">
                    <div class="mb-3">
                        <label for="periodo" class="form-label">Período:</label>
                        <input class="form-control" type="text" id="periodo" value="<%= infoadicional.periodo %>" readonly disabled>
                    </div>
                </div>
            </div>
          </div>
          <div class="col-6">
            <div class="mb-4">
              <label for="disciplinas" class="form-label">Disciplinas matriculadas:</label>
              <div class="form-control disciplinas" id="disciplinas" style="height: auto;" readonly disabled>
                <% if (infoadicional.disciplinas && infoadicional.disciplinas.length > 0) { %>
                  <% infoadicional.disciplinas.forEach(disciplina => { %>
                    <%= disciplina.nome %><br>
                  <% }); %>
                <% } else { %>
                  Nenhuma disciplina matriculada.
                <% } %>
              </div>
            </div>
          </div>
        </div> 
    
        <button type="button" class="btn"  style="background-color: rgb(115, 115, 141);border-color: rgb(115, 115, 141); color: white; width: 100%;" >Salvar alterações</button>
    
      </section>
    
      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>


</body>
</html>
